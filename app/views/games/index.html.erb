        </section>
      </section>

    </section>

    <section class="wrapper">

      <section class="title">
        <h3>Completed games</h3>
        <p>4 games complete</p>
      </section>

      <section class="games">
        <section class="game oop">
            <a href="#">
              <%= image_tag "icon-oop.svg", class: "icon" %>
