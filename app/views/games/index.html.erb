
<section class="main">

  <section class="menu">
    <ul>
      <li><%= link_to 'Home', root_path, class: "home active"  %></li>
      <li><a href="#" class="leaderboard">Leaderboard</a></li>
      <li><a href="#" class="results">Results</a></li>
      <li><a href="#" class="statistics">Statistics</a></li>
      <li><%= link_to "Profile", profile_path, class: "profile"  %></li>
    </ul>
  </section>

  <section class="content">

    <section class="wrapper">
      <section class="summary">
        <section class="profile-head" style="background-image: linear-gradient(180deg, rgba(27,28,30,0) 75%, rgba(27,28,30,.99) 95%), url(<%= asset_path 'profile-head.png' %>)"></section>
