<div class="container">
  <h1>Leaderboard</h1>
  <p>X games total | Y games started | Z games completed </p>






<% @users.each do |user|%>
  <div class="card">
    <div>
      <% if user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-left"  %>
      <% else %>
        <%= image_tag "data:image/jpeg;base64,", height: 150, width: 150, class: "card-img-left" %>
      <% end %>
    </div>

    <div class="card-title">
      <h2><%= user.first_name %></h2>
      <h2><%= user.last_name %></h2>
      <% if user == current_user %>
        <h2><strong>YOU</strong></h2>
      <% end %>
    </div>
    <div class="card-body">
      <h3>Points: <%= user.current_points %></h3>
      <h3>Ranking: YY</h3>
    </div>

  </div>


<% end %>
</div>
