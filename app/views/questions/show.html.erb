
<section class="main">

  <section class="menu">
    <ul>
      <li><a href="#" class="home active">Home</a></li>
      <li><a href="#" class="leaderboard">Leaderboard</a></li>
      <li><a href="#" class="results">Results</a></li>
      <li><a href="#" class="statistics">Statistics</a></li>
      <li><a href="#" class="profile">Profile</a></li>
    </ul>
  </section>

  <section class="content">
    <section class="wrapper">
      <h1>Questions</h1>

      <p><%= @question.content %></p>

      <%= simple_form_for(@response) do |f| %>

        <div class="form-inputs">
          <%= f.collection_radio_buttons :answer_id, @question.answers, :id, :content %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, value: "Submit" %>
        </div>

      <% end %>
    </section>

  </section>
</section>
